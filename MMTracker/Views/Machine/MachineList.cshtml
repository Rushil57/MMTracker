@model MMTracker.Models.MachineViewModel
@{
    ViewData["Title"] = "Machine List";
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">

            <div class="row">
                @*===================*@
                <div class="col-md-12">
                    <div class="form-group">
                        <h4 style="float:left" class="modal-title"><strong>Machine</strong></h4>
                    </div>
                </div>
                <div id="myModal" class="modal fade" role="dialog" tabindex='-1'>
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"><i class="ft-user"></i> Machine </h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="projectinput1">AssetId  </label>
                                                <input type="text" id="txtAssetId" class="form-control">
                                                <input type="hidden" id="hdnMachineId" />
                                            </div>

                                            <div class="form-group">
                                                <label for="projectinput8">Category</label>
                                                <select id="ddlCategory" class="form-control">
                                                    <option value="-1">---Select---</option>
                                                    @foreach (var item in Model.CategoryList)
                                                    {
                                                        <option value="@item.CategoryId">
                                                            @item.Name
                                                        </option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="projectinput8">Department</label>
                                                <select id="ddlDepartment" class="form-control">
                                                    <option value="-1">---Select---</option>
                                                    @foreach (var item in Model.DepartmentList)
                                                    {
                                                        <option value="@item.DepartmentId">
                                                            @item.Name
                                                        </option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="projectinput1">Machine Owner</label>
                                                <input type="text" id="txtMachineOwner" class="form-control">
                                            </div>

                                            <div class="form-group">
                                                <label for="projectinput8">Production Rate Per Day</label>
                                                <input type="text" id="txtProductionRate" class="form-control" max="6">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="form-actions">
                                    <button type="button" class="btn btn-warning mr-1" data-dismiss="modal">Close</button>
                                    <button type="button" id="btnSaveMachine" class="btn btn-primary" onclick="saveMachine()">
                                        <i class="la la-check-square-o"></i> Save
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                @*================*@

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <form class="form">
                                    <div class="form-body">
                                        <div class="form-group">
                                            <button type="button" id="btnAddMachine" style="float:right" class="btn btn-info btn-sm btn-round" data-toggle="modal" data-target="#myModal" onclick="clearData()"><i class="ft-plus"></i> Add New Machine</button>
                                        </div>
                                        <h4 class="form-section"><i class="ft-user"></i> List of Machine</h4>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card-content collapse show vtpl-grid-align">
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered table-striped" id="machinetbl">
                                                            <thead>
                                                                <tr>
                                                                    <th>Machine Owner</th>
                                                                    <th>Category</th>
                                                                    <th>Department</th>
                                                                    <th>Productio Rate</th>
                                                                    <th style="width: 25px;">Edit</th>
                                                                    <th style="width: 25px;">Delete</th>
                                                                </tr>
                                                            </thead>

                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Machine.js"></script>
}