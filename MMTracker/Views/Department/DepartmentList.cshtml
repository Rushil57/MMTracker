@{
    ViewData["Title"] = "Department List";
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">

            <div class="row">
                @*===================*@
                <div class="col-md-12">
                    <div class="form-group">
                        <h4 style="float:left" class="modal-title"><strong>Department</strong></h4>
                    </div>
                </div>
                <div id="myModal" class="modal fade" role="dialog" tabindex='-1'>
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"><i class="ft-user"></i> Department </h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="projectinput1">Department Name  </label>
                                                <input type="text" id="txtDepartmentName" class="form-control">
                                                <input type="hidden" id="hdnDepartmentId" />
                                            </div>

                                            <div class="form-group">
                                                <label for="projectinput8">Supervisor Name</label>
                                                <input type="text" id="txtSupervisorName" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="projectinput1">Mobile Number</label>
                                                <input type="text" id="txtMobileNumber" class="form-control">
                                            </div>

                                            <div class="form-group">
                                                <label for="projectinput8">Extension Name</label>
                                                <input type="text" id="txtExtensionNumber" class="form-control" maxlength="6">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="form-actions">
                                    <button type="button" class="btn btn-warning mr-1" data-dismiss="modal">Close</button>
                                    <button type="button" id="btnSaveDepartment" class="btn btn-primary" onclick="saveDepartment()">
                                        <i class="la la-check-square-o"></i> Save
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                @*================*@

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <form class="form">
                                    <div class="form-body">
                                        <div class="form-group">
                                            <button type="button" id="btnAddDepartment" style="float:right" class="btn btn-info btn-sm btn-round" data-toggle="modal" data-target="#myModal" onclick="clearData()"><i class="ft-plus"></i> Add New Department</button>
                                        </div>
                                        <h4 class="form-section"><i class="ft-user"></i> List of Department</h4>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card-content collapse show vtpl-grid-align">
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered table-striped" id="departmenttbl">
                                                            <thead>
                                                                <tr>
                                                                    <th>Department Name</th>
                                                                    <th>Supervisor Name</th>
                                                                    <th>Mobile Number</th>
                                                                    <th style="width: 25px;">Edit</th>
                                                                    <th style="width: 25px;">Delete</th>
                                                                </tr>
                                                            </thead>

                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Department.js"></script>
    
}